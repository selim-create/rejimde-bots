{
  "name": "rejimde-bots",
  "version": "1.0.0",
  "description": "Rejimde Bot Simulation System",
  "main": "dist/index.js",
  "scripts": {
    "build":  "tsc",
    "start": "node dist/index.js",
    "dev": "nodemon --exec ts-node src/index.ts",
    
    "create-bots": "ts-node src/scripts/create-bots.ts",
    "create-bots: dry": "ts-node src/scripts/create-bots.ts --dry-run",
    "create-bots:test": "ts-node src/scripts/create-bots.ts --count=5 --dry-run",
    "create-bots:persona": "ts-node src/scripts/create-bots.ts --persona=super_active --count=10",
    
    "run-daily": "ts-node src/scripts/run-daily.ts",
    "run-daily:test": "ts-node src/scripts/run-daily.ts --limit=5",
    
    "toggle-bots": "ts-node src/scripts/toggle-bots.ts",
    "toggle-bots:stats": "ts-node src/scripts/toggle-bots.ts --stats",
    "toggle-bots:off": "ts-node src/scripts/toggle-bots.ts --all --inactive",
    "toggle-bots:on": "ts-node src/scripts/toggle-bots.ts --all --active",
    "migrate-data": "ts-node src/scripts/migrate-bot-data.ts",
    "report": "ts-node src/scripts/report.ts",
    "test-api": "ts-node src/scripts/test-api.ts",
    "test-generator": "ts-node src/scripts/test-generator.ts",
    "test-db": "ts-node src/scripts/test-db.ts",
    "test-global-limits": "ts-node src/scripts/test-global-limits.ts"
  },
  "keywords":  ["rejimde", "bots", "simulation"],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node":  "^25.0.3",
    "@types/node-cron": "^3.0.11",
    "axios": "^1.13.2",
    "better-sqlite3": "^12.5.0",
    "chalk": "^5.6.2",
    "dotenv": "^17.2.3",
    "node-cron": "^4.2.1",
    "openai": "^6.15.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.52.0",
    "@typescript-eslint/parser": "^8.52.0",
    "eslint": "^9.39.2",
    "nodemon": "^3.1.11",
    "prettier": "^3.7.4"
  }
}